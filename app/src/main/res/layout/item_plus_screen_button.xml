<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/plusContainer"
    android:layout_width="152dp"
    android:layout_height="68dp"
    android:background="@drawable/plus_screen_button_background">

    <ImageView
        android:id="@+id/plusScreenImage"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="8dp"
        android:elevation="5dp"
        android:src="@drawable/ic_tchat"
        app:tint="#43576C"/>

    <TextView
        android:id="@+id/plusScreenText"
        android:textSize="12sp"
        android:textColor="#43576C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/plusScreenImage"
        android:layout_margin="8dp"
        android:layout_centerHorizontal="true"
        android:elevation="5dp"
        android:text="Tchat" />

</androidx.constraintlayout.widget.ConstraintLayout>