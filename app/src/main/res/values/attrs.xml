<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PlusScreenButtonView">
        <attr name="description" format="string"/>
        <attr name="imageDescription" format="integer"/>
        <attr name="android:drawable"/>
    </declare-styleable>

    <declare-styleable name="GoalProgressBar">
        <attr name="goalIndicatorHeight" format="dimension"/>
        <attr name="goalIndicatorWidth" format="dimension"/>
        <attr name="goalReachedColor" format="color"/>
        <attr name="goalNotReachedColor" format="color"/>
        <attr name="unfilledSectionColor" format="color"/>
        <attr name="barHeight" format="dimension"/>
        <attr name="indicatorType" format="enum">
            <enum name="line" value="0"/>
            <enum name="circle" value="1"/>
            <enum name="square" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="SwagPoints">
        <attr name="points" format="integer" />
        <attr name="max" format="integer" />
        <attr name="min" format="integer"/>
        <attr name="step" format="integer"/>

        <attr name="indicatorIcon" format="reference" />

        <attr name="progressWidth" format="dimension" />
        <attr name="progressColor" format="color" />

        <attr name="arcWidth" format="dimension" />
        <attr name="arcColor" format="color" />

        <attr name="textSize" format="dimension"/>
        <attr name="textColor" format="color"/>

        <attr name="clockwise" format="boolean" />
        <attr name="enabled" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ProgressButtonView">
        <attr name="drawableBackground" format="reference" />
        <attr name="drawableProgress" format="reference" />
        <attr name="maxProgress" format="integer" />
        <attr name="currentProgress" format="integer" />
        <attr name="progressText" format="string"/>
        <attr name="progressTextSize" format="dimension"/>
        <attr name="progressTextOnBackgroundColor" format="color"/>
        <attr name="progressTextOnProgressColor" format="color"/>
        <attr name="rippleEffectColor" format="color"/>
        <attr name="useTextOnProgress" format="boolean"/>
        <attr name="progressTextStyle" format="enum">
            <enum name="normal" value="0"/>
            <enum name="bold" value="1"/>
            <enum name="italic" value="2"/>
        </attr>
    </declare-styleable>
</resources>